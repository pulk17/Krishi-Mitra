{
    "compilerOptions": {
      "target": "es2022",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "preserve",
      "incremental": true,
      "noEmit": true,
      "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules"]
  }